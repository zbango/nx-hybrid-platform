{
  "name": "desktop",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/desktop/src",
  "projectType": "application",
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run start",
        "cwd": "apps/desktop"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run build",
        "cwd": "apps/desktop"
      },
      "outputs": ["{projectRoot}/release/app/dist"],
      "dependsOn": ["^build"]
    },
    "package": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run package",
        "cwd": "apps/desktop"
      },
      "outputs": ["{projectRoot}/release/build"],
      "dependsOn": ["build"]
    }
  }
}

